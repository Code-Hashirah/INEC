<%- include('../includes/voters/voter-header') %>
</head>
<body class="text-bg-light">
    <%- include('../includes/voters/voter-navbar') %>
<div class="container-fluid">
  <!-- <%= JSON.stringify(ErrorMsg) %> -->
    <form action="/login"  method="post" class="w-75 mx-auto">
        <div class="mb-3 mt-3">
          <label for="email" class="form-label">Email:</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" name="Email">
          <div class="valid-feedback">Valid.</div>
          <div>
            <% if(ErrorMsg.length!==0){
            for (let error of ErrorMsg){
              if(error.param=="Email") { %>
                <div class="text-danger"> <%= error.msg %></div>
            <%  }
            }
          }
            %> 
          
          </div>
        </div>
         

        <div class="mb-3">
          <label for="pwd" class="form-label">Password:</label>
          <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="Password" >
          <div class="valid-feedback">Valid.</div>
          <div>
            <% if(ErrorMsg.length!==0){
            for (let error of ErrorMsg){
              if(error.param=="Password") { %>
                <div class="text-danger"> <%= error.msg %></div>
            <%  }
            }
          }
            %> 
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <div class="mt-3">
        <a href="/register" class="btn btn-success">I am not registered</a>
      </div>
</div>





    <%- include('../includes/voters/voter-footer') %>
</body>
</html>