<%- include('../includes/voters/voter-header') %>
</head>
<body class="text-bg-light">
    <%- include('../includes/voters/voter-navbar') %>
<div class="container-fluid">
  <!-- <%= JSON.stringify(ErrorMsg) %> -->
    <form action="/register"  method="post" class="w-75 mx-auto">
        <div class="mb-3 mt-3">
          <label for="email" class="form-label">Email:</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" name="Email">
          <div class="valid-feedback">Valid.</div>
          <div>
            <% if(ErrorMsg.length!==0){
            for (let error of ErrorMsg){
              if(error.param=="Email") { %>
                <div class="text-danger"> <%= error.msg %></div>
            <%  }
            }
          }
            %> 
          
          </div>
        </div>

        <div class="mb-3 mt-3">
            <label for="Nin" class="form-label">NIN:</label>
            <input type="number" class="form-control" id="Nin"  name="Nin" >
            <div class="valid-feedback">Valid.</div>
            <div>
              <% if(ErrorMsg.length!==0){
              for (let error of ErrorMsg){
                if(error.param=="Nin") { %>
                  <div class="text-danger"> <%= error.msg %></div>
              <%  }
              }
            }
              %> 
          </div>

          <div class="mb-3 mt-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="Name" >
            <div class="valid-feedback">Valid.</div>
            <div>
              <% if(ErrorMsg.length!==0){
              for (let error of ErrorMsg){
                if(error.param=="Name") { %>
                  <div class="text-danger"> <%= error.msg %></div>
              <%  }
              }
            }
              %> 
          </div>

          <div class="mb-3 mt-3">
            <label for="phone" class="form-label">Phone Number:</label>
            <input type="tel" class="form-control" id="phone" placeholder="Enter phone number" name="Phone" >
            <div class="valid-feedback">Valid.</div>
            <div>
              <% if(ErrorMsg.length!==0){
              for (let error of ErrorMsg){
                if(error.param=="Phone") { %>
                  <div class="text-danger"> <%= error.msg %></div>
              <%  }
              }
            }
              %> 
          </div>

        <div class="mb-3">
          <label for="pwd" class="form-label">Password:</label>
          <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="Password" >
          <div class="valid-feedback">Valid.</div>
          <div>
            <% if(ErrorMsg.length!==0){
            for (let error of ErrorMsg){
              if(error.param=="Password") { %>
                <div class="text-danger"> <%= error.msg %></div>
            <%  }
            }
          }
            %> 
        </div>

        <div class="mb-3">
          <label for="Cpwd" class="form-label">Password:</label>
          <input type="password" class="form-control" id="Cpwd" placeholder="Confirm password" name="ConfirmPass" >
          <div class="valid-feedback">Valid.</div>
          <div>
            <% if(ErrorMsg.length!==0){
            for (let error of ErrorMsg){
              if(error.param=="ConfirmPass") { %>
                <div class="text-danger"> <%= error.msg %></div>
            <%  }
            }
          }
            %> 
        </div>

        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="myCheck" name="remember" required>
          <label class="form-check-label" for="myCheck">I hereby certify that i am of age 18 years or above
             and eligible to vote and i take full responsibilty of my use of this platform</label>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Check this checkbox to continue.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>





    <%- include('../includes/voters/voter-footer') %>
</body>
</html>